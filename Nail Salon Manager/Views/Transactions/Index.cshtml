@model IEnumerable<Nail_Salon_Manager.Models.Transaction>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Transactions</h2>

@if (!Model.Any())
{
    <p>Your shop does not have any transactions.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <td>Date</td>
                <th>Amount</th>
                <th>Description</th>
                <th>Employee</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <td>@Html.ActionLink(transaction.Date.ToString(), "Details", "Transactions", new { id = transaction.Id }, null)</td>
                    <td>@transaction.Amount.ToString()</td>
                    <td>@transaction.Description</td>
                    <td>@transaction.Employee.Name</td>
                </tr>
            }
        </tbody>
    </table>
}