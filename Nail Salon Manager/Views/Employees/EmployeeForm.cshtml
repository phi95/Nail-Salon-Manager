@model Nail_Salon_Manager.ViewModel.EmployeeFormViewModel
@{
    ViewBag.Title = "EmployeeForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Employees"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Employee.Name)
        @Html.TextBoxFor(x => x.Employee.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Employee.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Employee.DOB)
        @Html.TextBoxFor(x => x.Employee.DOB, "{0:MM/dd/yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Employee.Address)
        @Html.TextBoxFor(x => x.Employee.Address, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(x => x.Employee.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}